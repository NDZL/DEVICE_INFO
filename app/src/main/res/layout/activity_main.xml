<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvBattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="battery Info"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btOpenGMPAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GMAPS" />

        <Button
            android:id="@+id/idLaunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="LARGE" />

        <Button
            android:id="@+id/btVirtualKeyb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Vkeyb" />

        <Button
            android:id="@+id/btCamera"
            android:layout_width="94dp"
            android:layout_height="wrap_content"

            android:text="Camera" />

        <Button
            android:id="@+id/btSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Say Hello" />

        <Button
            android:id="@+id/btWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Wait" />

        <EditText
            android:id="@+id/etPTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ems="10"
            android:inputType="textPersonName"
            android:text="Questo Ã¨ un test vocale: a a a" />

        <Button
            android:id="@+id/cputest"
            android:layout_width="wrap_content"
            android:layout_height="62dp"



            android:text="LARGER" />

        <Button
            android:id="@+id/btReboot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Reboot" />
    </LinearLayout>
</ScrollView>